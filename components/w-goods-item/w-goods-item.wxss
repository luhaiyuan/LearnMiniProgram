/* components/w-goods-item/w-goods-item.wxss */
.goods-item {
  padding-bottom: 90rpx;
}

.goods-item .image {
  width: 100%;
  border-radius: 10rpx;
}

.goods-item .desc-info {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 5rpx;
}

.goods-item .desc-info .title {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  padding: 0 5rpx;
  color: #333;
}

.goods-item .desc-info .info {
  text-align: center;
  color: #ff5777;
}

.goods-item .desc-info .info .icon {
  width: 30rpx;
  height: 30rpx;
  padding: 0 6rpx 0 10rpx;
  position: relative;
  top: 4rpx;
}


